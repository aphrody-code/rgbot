[Unit]
Description=Rose Griffon Bot Auth Expiry Monitor
After=network.target

[Service]
Type=oneshot
ExecStart=/home/admin/rgbot/scripts/auth-monitor.sh
# Configure notification channels via environment
Environment=WARN_HOURS=2
# Environment=NOTIFY_PHONE=+1234567890
# Environment=NOTIFY_NTFY=rgbot-alerts

[Install]
WantedBy=default.target
